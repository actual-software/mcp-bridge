{
  "dashboard": {
    "id": null,
    "title": "MCP Gateway",
    "tags": ["mcp", "gateway", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Gateway Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"mcp-gateway\"}",
            "legendFormat": "Gateway Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "mcp_gateway_connections_active",
            "legendFormat": "Active Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mcp_gateway_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "decimals": 2
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
      },
      {
        "id": 4,
        "title": "Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mcp_gateway_requests_success_total[5m]) / rate(mcp_gateway_requests_total[5m]) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            },
            "unit": "percent",
            "decimals": 2
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0}
      },
      {
        "id": 5,
        "title": "Response Time Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mcp_gateway_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mcp_gateway_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mcp_gateway_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time",
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Connection Status",
        "type": "graph",
        "targets": [
          {
            "expr": "mcp_gateway_connections_active",
            "legendFormat": "Active"
          },
          {
            "expr": "rate(mcp_gateway_connections_total[5m])",
            "legendFormat": "New Connections/sec"
          },
          {
            "expr": "rate(mcp_gateway_connections_rejected_total[5m])",
            "legendFormat": "Rejected/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Authentication Status",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_gateway_auth_success_total[5m])",
            "legendFormat": "Success/sec"
          },
          {
            "expr": "rate(mcp_gateway_auth_failures_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Auth Events/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Rate Limiting",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_gateway_rate_limited_total[5m])",
            "legendFormat": "Rate Limited/sec"
          },
          {
            "expr": "mcp_gateway_rate_limit_remaining",
            "legendFormat": "Remaining Quota"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 12}
      },
      {
        "id": 9,
        "title": "Backend Health",
        "type": "table",
        "targets": [
          {
            "expr": "mcp_gateway_backend_healthy",
            "legendFormat": "{{backend}}"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "green", "value": 1}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 12}
      },
      {
        "id": 10,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"mcp-gateway\"}",
            "legendFormat": "Memory Usage"
          },
          {
            "expr": "rate(process_cpu_seconds_total{job=\"mcp-gateway\"}[5m]) * 100",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {
            "id": "left",
            "label": "Memory",
            "unit": "bytes"
          },
          {
            "id": "right",
            "label": "CPU %",
            "unit": "percent"
          }
        ],
        "seriesOverrides": [
          {
            "alias": "CPU Usage %",
            "yAxis": 2
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18}
      },
      {
        "id": 11,
        "title": "Error Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "increase(mcp_gateway_errors_total[1h])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"mcp-gateway\"}, instance)",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(mcp_gateway_build_info[5m]) > 0",
          "iconColor": "green"
        }
      ]
    }
  }
}